<body id=login>
  <div class="container">
    <div class="row">
      <div class="col-lg-10 col-xl-9 mx-auto">
        <div class="card flex-row my-5 border-0 shadow rounded-3 overflow-hidden">
          <div class="card-img-left d-none d-md-flex">
            <!-- Background image for card set in CSS! -->
          </div>
          <div class="card-body p-4 p-sm-5">
            <h5 class="card-title text-center mb-5 fw-light fs-5 fw-bold">Log in</h5>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-floating mb-3">
                  <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "name@example.com"%>
                  <%= f.label :email, for: "floatingInputEmail"%>
                </div>
                <div class="form-floating mb-3">
                  <%= f.password_field :password, class: "form-control", placeholder: "Password", autocomplete: "current-password" %>
                  <%= f.label :password, for:"floatingPassword"%><br/>
                </div>
                <div type="submit", class="d-grid mb-2">
                  <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-login fw-bold text-uppercase"%>
                </div>
                <a class="d-block text-center mt-2 small" href="#"></a>
                <hr class="my-4">
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  </body>
<%= render "devise/shared/links" %>